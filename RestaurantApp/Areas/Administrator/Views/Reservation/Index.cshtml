@model ReservationQuaryModel?

@{
	ViewData["Title"] = "Reservations";

	var currentPage = Model?.CurrentPage ?? 1;

	var count = 1;

	var totalPages = 0;
	int numberOfPagesToShow = 3;
	int startPage = 0;
	int endPage = 0;

	if (Model != null)
	{
		count = (currentPage - 1) * Model.RecordsPerPage;
		totalPages = (int)Math.Ceiling((double)Model.TotalPageRecords / Model.RecordsPerPage);

		startPage = Math.Max(1, (currentPage - numberOfPagesToShow / 2));
		endPage = Math.Min(totalPages, (currentPage + numberOfPagesToShow / 2));
	}
}

<div class="container mt-5 pt-5">

	@if (TempData["Error"] != null)
	{
		<div id="message" class="customAlertMessage alert alert-danger text-center mt-5">@TempData["Error"]</div>
	}

	<h2 class="mb-4 pt-5">Reservations List</h2>

	<div class="mb-4">
		<form method="get" asp-area="Administrator" asp-controller="Reservation" asp-action="Index">
			<div class="row">
				<div class="col-sm-2">
					<input type="text" class="form-control-sm" name="name" placeholder="Find by selected Name">
				</div>
				<div class="col-sm-2">
					<input type="date" class="form-control-sm" name="startDate" placeholder="Start Date">
				</div>
				<div class="col-sm-2">
					<input type="date" class="form-control-sm" name="endDate" placeholder="End Date">
				</div>
				<div class="col-sm-2">
					<button type="submit" class="btn btn-sm btn-primary">Filter</button>
				</div>
			</div>
		</form>
	</div>

	<table class="table table-striped reservation-table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Date</th>
				<th scope="col">Number of Guests</th>
				<th scope="col">Phone Number</th>
				<th scope="col">Email</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				@foreach (var reservation in Model.Reservations)
				{
					<tr>
						<th scope="row">@(count += 1)</th>
						<td>@reservation.Name</td>
						<td>@reservation.Date</td>
						<td>@reservation.PeopleCount</td>
						<td>@reservation.PhoneNumber</td>
						<td>@reservation.Email</td>
						<td>
							<form method="post" asp-area="Administrator" asp-controller="Reservation" asp-action="Remove" asp-route-id="@reservation.Id" asp-route-userId="@reservation.UserId">
								<button class="btn btn-sm btn-danger" onclick="return cancelReservation('@reservation.Name')">Cancel</button>
							</form>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>

	<div class="pagination-container mt-4">
		<nav aria-label="Page navigation">
			<ul class="pagination justify-content-center">
				<li class="page-item @(currentPage == 1 ? "disabled" : "")">
					<a class="page-link" asp-area="Administrator" asp-controller="Reservation" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)">Previous</a>
				</li>

				@if (startPage > 1)
				{
					<li class="page-item">
						<a class="page-link" asp-area="Administrator" asp-controller="Reservation" asp-action="Index" asp-route-pageNumber="1">1</a>
					</li>
					<li class="page-item disabled">
						<span class="page-link">...</span>
					</li>
				}

				@for (int i = 1; i <= totalPages; i++)
				{
					<li class="page-item @(currentPage == i ? "active" : "")">
						<a class="page-link" asp-area="Administrator" asp-controller="Reservation" asp-action="Index" asp-route-pageNumber="@i">@i</a>
					</li>
				}

				@if (endPage < totalPages)
				{
					<li class="page-item disabled">
						<span class="page-link">...</span>
					</li>
					<li class="page-item">
						<a class="page-link" asp-area="Administrator" asp-controller="Reservation" asp-action="Index" asp-route-pageNumber="@totalPages">@totalPages</a>
					</li>
				}

				<li class="page-item @(currentPage == totalPages ? "disabled" : "")">
					<a class="page-link" asp-area="Administrator" asp-controller="Reservation" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)">Next</a>
				</li>
			</ul>
		</nav>
	</div>
</div>

@section Scripts {
	<script src="~/js/show-notification.js"></script>
	<script src="~/js/cancel-notification.js"></script>
}