@model EventFormModel

@{
	ViewData["Title"] = "Add Event";
	var startEvent = DateTime.Parse(Model.StartEvent.ToString("dd-MM-yyyy HH:mm"));
	var endEvent = DateTime.Parse(Model.EndEvent.ToString("dd-MM-yyyy HH:mm"));
}

<section class="events">
	<div class="container aos-init aos-animate" data-aos="fade-up">
		<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 mt-5 p-5">
			@if (TempData["ErrorDate"] != null)
			{
				<div id="dateMessage" class="customAlertMessage alert alert-danger mt-5">@TempData["ErrorDate"]</div>
			}
			<form method="post">
				<div class="form-group">
					<label asp-for="Title"></label>
					<input asp-for="Title" class="form-control" placeholder="Title...">
					<span asp-validation-for="Title" class="small text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
					<span asp-validation-for="Description" class="small text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="@startEvent">Start Date</label>
					<input type="datetime-local" asp-for="@startEvent" class="form-control">
					<span asp-validation-for="@startEvent" class="small text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="@endEvent">End Date</label>
					<input type="datetime-local" asp-for="@endEvent" class="form-control">
					<span asp-validation-for="@endEvent" class="small text-danger"></span>
				</div>
				<div class="text-center">
					<input type="submit" class="btn btn-primary mt-3" value="Save" />
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/show-notification.js"></script>
}