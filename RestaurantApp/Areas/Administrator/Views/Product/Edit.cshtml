@model ProductFormModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="row mt-5 pt-5">
    <div class="col-4 offset-4 mt-5">
        <form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small textdanger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control" type="file" disabled>
                <span asp-validation-for="ImagePath" class="small textdanger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small textdanger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}