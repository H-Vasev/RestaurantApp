@model IEnumerable<ProductViewModel>

@{
	ViewData["Title"] = "Menu";


}

<section id="menu" class="menu section-bg">
	<div class="container">
		<div class="section-title mt-5 pt-5">
			<h2>Menu</h2>
			<p>Check Our Tasty Menu</p>
		</div>

		<div class="col-lg-12 d-flex justify-content-center">
			<ul id="menu-flters">
				<li>
					<a asp-area="Administrator" asp-controller="Product" asp-action="Index">Show All</a>
				</li>

				@foreach (var category in ViewBag.Categories)
				{
					<li>
						<a asp-area="Administrator" asp-controller="Product" asp-action="Index" asp-route-category="@category.Name">@category.Name</a>
					</li>
				}
			</ul>
		</div>

		<div>
			<a asp-area="Administrator" asp-controller="Product" asp-action="Add" >Add New Product</a>
		</div>

		<div class="row menu-container">
			@foreach (var item in Model)
			{
				<div class="col-lg-6 menu-item">
					<img src="~/@item.Image" class="menu-img" alt="">
					<div class="menu-content">
						<a href="#">@item.Name</a>
						<span>$@item.Price</span>
					</div>
					<div class="menu-ingredients">
						@item.Description
					</div>
					<div class="d-flex justify-content-end">
						<a asp-area="Administrator" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="me-2">Edit</a>
						<a asp-area="Administrator" asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
					</div>
				</div>
			}
		</div>
	</div>
</section>
