@model IEnumerable<MenuViewModel>

@{
	ViewData["Title"] = "Menu";
}

<section id="menu" class="menu section-bg">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title mt-5 pt-5">
            <h2>Menu</h2>
            <p>Check Our Tasty Menu</p>
        </div>

        <div class="row aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    @* @foreach (var category in categories)
                    {
                        <li>@category.Name</li>
                    } *@
                </ul>
            </div>
        </div>

        <div class="row menu-container aos-init aos-animate">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 menu-item">
                    <img src="~/@item.Image" class="menu-img" alt="">
                    <div class="menu-content">
                        <a href="#">@item.Name</a>
                        <span>$@item.Price</span>
                    </div>
                    <div class="menu-ingredients">
                        @item.Description
                    </div>
                    <a asp-area="" asp-controller="Product" asp-action="Add" asp-route-id="@item.Id" class="offset-sm-8">Add to Basket</a>
                </div>
            }
        </div>
    </div>
</section>