@model RegisterFormModel

@{
    ViewData["Title"] = "Register";
}

<div class="row vh-100 align-items-center justify-content-center bg-secondary">
    <div class="col-md-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form id="registerForm" method="post">
            <hr />
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.FirstName">FirstName</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.FirstName" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.Username">Username</label>
                        <input class="form-control " autocomplete="firstname" aria-required="true" asp-for="@Model.Username" />
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.City">City</label>
                        <input class="form-control " autocomplete="lastName" aria-required="true" asp-for="@Model.City" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.Password">Password</label>
                        <input class="form-control " type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="text-center mb-3">
                        <label asp-for="@Model.LastName">LastName</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.LastName" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.Email">Email</label>
                        <input class="form-control " autocomplete="Email" aria-required="true" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.Street">Street Name</label>
                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Street" />
                        <span asp-validation-for="@Model.Street" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.PostalCode">PostCode</label>
                        <input class="form-control" aria-required="true" asp-for="@Model.PostalCode" />
                        <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="text-center mb-3">
                        <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                        <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
