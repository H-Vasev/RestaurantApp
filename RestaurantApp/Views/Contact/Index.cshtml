@model ContactFormModel

@{
	ViewData["Title"] = "Contact us";
}

<section id="contact" class="contact mt-5 pt-5">
	<div class="container aos-init pt-5" data-aos="fade-up">

		<div class="section-title">
			<h2>Contact</h2>
			<p>Contact Us</p>
		</div>
	</div>

	@if (TempData["Success"] != null)
	{
		<div id="message" class="customAlertMessage alert alert-success text-center mt-5">@TempData["Success"]</div>
	}

	<div class="container aos-init" data-aos="fade-up">

		<div class="row mt-5">

			<div class="col-lg-4">
				<div class="info">

					<div class="address">
						<i class="bi bi-geo-alt"></i>
						<h4>Location:</h4>
						<p>99 Canary Wharf, London, E14 4QZ</p>
					</div>

					<div class="open-hours">
						<i class="bi bi-clock"></i>
						<h4>Open Hours:</h4>
						<p>
							Monday-Sunday:<br>
							11:00 AM - 23:00 PM
						</p>
					</div>

					<div class="email">
						<i class="bi bi-envelope"></i>
						<h4>Email:</h4>
						<p>info@example.com</p>
					</div>

					<div class="phone">
						<i class="bi bi-phone"></i>
						<h4>Call:</h4>
						<p>+44 5589 55488 55</p>
					</div>

					<a asp-area="" asp-controller="Chat" asp-action="Index">
						<div class="chatWithUs">
							<i class="bi bi-geo-alt"></i>
							<h4>Need Help? Chat Now!</h4>
						</div>
					</a>

				</div>

			</div>

			<div class="col-lg-8 mt-5 mt-lg-0">

				<form asp-controller="Contact" asp-action="SendContactForm" method="post" class="php-email-form">
					<div class="row">
						<div class="col-md-6 form-group">
							<input type="text" asp-for="@Model.Name" class="form-control" id="name" placeholder="Your Name" value="@Model.Name" />
							<span asp-validation-for="@Model.Name"></span>
						</div>
						<div class="col-md-6 form-group mt-3 mt-md-0">
							<input type="email" asp-for="@Model.Email" class="form-control" id="Email" placeholder="Your Email" value="@Model.Email" />
							<span asp-validation-for="@Model.Email"></span>
						</div>
					</div>
					<div class="form-group mt-3">
						<input type="text" asp-for="@Model.Subject" class="form-control" id="Subject" placeholder="Subject" value="@Model.Subject" />
						<span asp-validation-for="@Model.Subject"></span>
					</div>
					<div class="form-group mt-3">
						<textarea asp-for="@Model.Message" class="form-control" rows="8" id="Message" placeholder="Message"></textarea>
						<span asp-validation-for="@Model.Message"></span>
					</div>
					<div class="my-3">
						<div class="loading">Loading</div>
						<div class="error-message"></div>
						<div class="sent-message">Your message has been sent. Thank you!</div>
					</div>
					<div class="text-center"><button type="submit">Send Message</button></div>
				</form>

			</div>

		</div>

	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/show-notification.js"></script>
}